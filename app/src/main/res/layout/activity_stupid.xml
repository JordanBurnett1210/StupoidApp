<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".StupidActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Self Destruct"
        android:id="@+id/stupidbutton"
        android:enabled="false"
        android:longClickable="false"
        android:layout_gravity="center_vertical"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Blegh"
        android:id="@+id/otherbutton"
        android:enabled="false"
        android:longClickable="false"
        android:layout_gravity="center_vertical"
        android:layout_below="@+id/stupidbutton"
        android:layout_alignLeft="@+id/stupidbutton"
        android:layout_alignStart="@+id/stupidbutton"
        android:layout_marginTop="44dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/basicText"
        android:layout_marginTop="70dp"
        android:visibility="visible"
        android:text="My app to change colors!"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />


</RelativeLayout>
